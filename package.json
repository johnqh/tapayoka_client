{
  "name": "@sudobility/tapayoka_client",
  "version": "0.0.3",
  "description": "React client library for Tapayoka API with TanStack Query hooks",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "build:watch": "bunx tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "bunx eslint src",
    "lint:fix": "bunx eslint src --fix",
    "format": "bunx prettier --write 'src/**/*.ts'",
    "typecheck": "bunx tsc --noEmit"
  },
  "keywords": [
    "tapayoka",
    "api-client",
    "react",
    "tanstack-query"
  ],
  "author": "Sudobility",
  "license": "BUSL-1.1",
  "peerDependencies": {
    "@sudobility/tapayoka_types": "^0.0.3",
    "@sudobility/types": "^1.9.55",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sudobility/tapayoka_types": "^0.0.3",
    "@sudobility/types": "^1.9.55",
    "@tanstack/react-query": "^5.90.5",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "react": "^19.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  }
}
